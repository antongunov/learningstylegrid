extends pug/page

block data
  - var title = "App | Learning Style Grid"

block head
  script(src="/assets/js/main.js" defer)

block body
  .page.page--bg-pattern
    .page__wrapper
      header.page__header.header
        nav.nav
          ul.nav__list
            li.nav__item.nav__item--right
              +nav-link-github("style-app")
      main.page__content.main
        .main__app
          #app
      footer.page__footer.footer
        +coded-with-love-using("Vue.js", "https://vuejs.org/")
